<?xml version="1.0" encoding="utf-8"?>
<com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingTop="15dp"
    tools:context=".training.ui.TrainingActivity">

    <TextView
        android:id="@+id/adoptionTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/bold"
        android:text="Dogsitting"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:textColor="#602B33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adoptionIntroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:fontFamily="@font/medium"
        android:text="@string/demo_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#35BDD3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adoptionTitleText" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lady_petting_her_dog"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/adoptionIntroText"/>

<!--    <ImageView-->
<!--        android:id="@+id/ivTraining"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@id/adoptionIntroText" />-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/arrow"
        app:tint="@color/on_boarding_blue" />

</com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout>