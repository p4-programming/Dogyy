<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoggyDoo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_transparent</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="selectedFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="unselectedFont" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/regular</item>
    </style>
    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/on_boarding_blue</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="Theme.DoggyDoo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textFont" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="tabIndicator" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/on_boarding_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="customSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">#BBBBBB</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.DoggyDooChat" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


</resources>